        <h1>Update your name</h1>
    </div>
    <div role="main" class="ui-content">
        <input type="text" name="name" class="name-set" data-theme="a" placeholder="add your name here..." />

        <button id="close-set-name-modal" class="ui-btn ui-corner-all ui-shadow ui-btn-inline ui-btn-a" data-rel="back">Close</button>
